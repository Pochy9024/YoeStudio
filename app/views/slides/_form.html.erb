<div class="item<%= ' active' if active %>" style="background-image: url(<%= image_url slide.slide.url(:medium) %>)">
<div class="container">
  <div class="row">
    <div class="col-sm-12">
      <div class="carousel-content centered">
        <h2 class="animation animated-item-1"><%= slide.title if slide.title.present? %></h2>
        <p class="animation animated-item-2"><%= slide.text if slide.text.present? %> </p>
      </div>
    </div>
  </div>
</div>
</div><!--/.item-->
<div class="section">
  <div class="container">
    <div class="row">
      <!-- Featured News -->

        <center><h1>Testimonios.</h1></center>
      <center><h4>(Palabras al Catalogo).</h4></center>
      <br>
        <% @testimonials.each do |t| %>
                <div class="caption"><h3><a><%= t.title %></a></h3></div>
                <div class="date"><strong>Por: <%= t.author %></strong> </div>
                <div class="intro"><p>"...<%= t.text %>.."</p></div>
                <br>
                <hr>
        <% end %>
    </div>
    <% if @testimonials.count > 6 %>
        <div class="apple_pagination">
          <%= will_paginate @testimonials, :container => true %>
        </div>
    <% end %>
  </div>
</div>

<hr>

<div class="section">
  <div class="container">
    <div class="row">
      <!-- Team Member -->
      <div class="col-md-4 col-sm-6">
        <div class="team-member">
          <!-- Team Member Photo -->
          <div class="team-member-image"><%= image_tag 'img/about/01 Yoe Riba (Body art en Desfile Inaugural 32 Festival del Caribe).JPG' %></div>
          <div class="team-member-info">
            <ul>
              <!-- Team Member Info & Social Links -->
              <li class="team-member-name">
                <%= t('about_me.pictures.title') %>
              </li>
              <li><%= t('about_me.pictures.first.title') %></li>
            </ul>
          </div>
        </div>
      </div>
      <!-- End Team Member -->
      <div class="col-md-4 col-sm-6">
        <div class="team-member">
          <div class="team-member-image"><%= image_tag 'img/about/02 Yoe Riba (escultura barro).JPG' %></div>
          <div class="team-member-info">
            <ul>
              <li class="team-member-name">
                <%= t('about_me.pictures.title') %>
							</li>
              <li><%= t('about_me.pictures.second.title') %></li>
            </ul>
          </div>
        </div>
      </div>
      <div class="col-md-4 col-sm-6">
        <div class="team-member">
          <div class="team-member-image"><%= image_tag 'img/about/04 Yoe Riba (restaurando puerta de 193X.jpg' %></div>
          <div class="team-member-info">
            <ul>
              <li class="team-member-name">
                <%= t('about_me.pictures.title') %>
              </li>
              <li><%= t('about_me.pictures.third.title') %></li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<hr>

<div class="section">
  <div class="container">
    <div class="row">
      <!-- Featured News -->

        <center><h1><%= t('about_me.testimonials.title') %></h1></center>
        <center><h4><%= t('about_me.testimonials.text') %></h4></center>
      <br>
        <% @testimonials.each do |t| %>
                <div class="caption"><h3><a><%= t.title %></a></h3></div>
                <div class="date"><strong><%= t('by') %>: <%= t.author %></strong> </div>
                <div class="intro"><p>"...<%= t.text %>.."</p></div>
                <br>
                <hr>
        <% end %>
    </div>
    <% if @testimonials.count > 6 %>
        <div class="apple_pagination">
          <%= will_paginate @testimonials, :container => true %>
        </div>
    <% end %>
  </div>
</div>
